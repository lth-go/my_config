[user]
    name = 李天华
    email = lith@weipaitang.com
[format]
    pretty = medium
[core]
    editor = nvim
    # sudo npm install -g diff-so-fancy
    pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = /Users/litianhua/.gitignore_global
[color]
    ui = always
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
    tool = vimdiff
[difftool "vimdiff"]
    path = nvim
[difftool]
    prompt = false
[log]
    date = iso
[push]
    default = simple
[pull]
    rebase = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
