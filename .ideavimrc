set hlsearch
set ignorecase
set number
set relativenumber
set clipboard=unnamedplus
set history=2000
set incsearch
set showmode
set matchpairs
set smartcase
set scrolloff=10
set sidescroll=1
set sidescrolloff=10

set surround

" Keymap

let mapleader=";"
noremap <Space> ;

map <leader>g gd

vnoremap < <gv
vnoremap > >gv

nnoremap * *``zz

" 切换布局快捷键
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-k> <c-w>k
nnoremap <c-j> <c-w>j

map H ^
map L g_

map <Leader>q :q<CR>

noremap q <Nop>
noremap Q <Nop>
noremap K <Nop>

" 插入模式增强
inoremap <C-A> <Home>
inoremap <C-E> <End>
inoremap <C-F> <Right>
inoremap <C-B> <Left>
inoremap <C-D> <Del>

" Go To
nnoremap <Leader>ff :action GotoFile<CR>

" 查找引用
nnoremap <Leader>fc :action FindUsages<CR>

" Structure
nnoremap <Leader>t :action FileStructurePopup<CR>

" 高亮
nnoremap <Backspace> :nohlsearch<CR>

" rename
nnoremap <Leader>r :action RenameElement<CR>

" 关闭所有其他标签
nnoremap <Leader>bd :action CloseAllEditorsButActive<CR>
