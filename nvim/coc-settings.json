{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "flow": {
      "command": "flow",
      "args": [
        "lsp"
      ],
      "filetypes": [
        "javascript",
        "javascriptreact"
      ],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [
        ".flowconfig"
      ]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-u>": "feedkeys:\\<C-u>"
  },
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,
  "python.linting.flake8Args": [
    "--ignore=E116,E402,E501"
  ],
  "python.formatting.autopep8Args": [
    "--ignore=E116,E501"
  ]
}
